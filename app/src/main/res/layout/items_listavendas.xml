<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="?actionBarSize"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imgProdutoLista" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textColor="@color/colorbar"
        android:id="@+id/txtFornecedorLista"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:id="@+id/txtCidadeEstadoLista"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:id="@+id/txtProdutoLista"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:id="@+id/txtQuantidadeLista"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="12sp"
            android:layout_gravity="center"
            android:id="@+id/imageEstrelaLista"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp">



            <ImageButton
                android:id="@+id/btoIDremoverprodutoLista"
                android:layout_width="82dp"
                android:layout_height="80dp"
                android:background="@color/colorbar"
                android:src="@drawable/ic_action_lixeira"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:textColor="@color/colorbar"
                android:id="@+id/txtValorLista"/>

            <ImageButton
                android:id="@+id/btoIDlistavendasLista"
                android:layout_width="82dp"
                android:layout_height="80dp"
                android:layout_gravity="right"
                android:background="@color/colorbar"
                android:src="@drawable/ic_action_listavendas"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>