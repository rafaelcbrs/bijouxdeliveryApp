<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="?actionBarSize"
                android:layout_height="?actionBarSize"
                android:src="@drawable/ic_action_menu"
                android:background="@android:color/transparent"
                android:id="@+id/btoMenuDrawer"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="?actionBarSize"
                android:text="@string/app_titulo"
                android:textColor="@color/colortitulo"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="@dimen/textTitulo"/>


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="46dp">

                <ImageView
                    android:id="@+id/icolocaliza"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="84dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="100dp"
                    android:src="@drawable/ic_action_localizacao" />

                <ImageView
                    android:id="@+id/icocesta"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_action_cesta" />
            </RelativeLayout>
        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>



</LinearLayout>

